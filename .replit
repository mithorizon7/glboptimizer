modules = ["python-3.11", "nodejs-20", "python3", "postgresql-16"]

[nix]
channel = "stable-24_05"
packages = ["openssl", "postgresql", "redis"]

[deployment]
deploymentTarget = "autoscale"
# This command is used by the deployment system. It's also been corrected.
run = ["sh", "-c", "uv pip install -e . && gunicorn --bind 0.0.0.0:5000 --reuse-port --reload wsgi:application"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
# This is the critical line that has been fixed.
# It now installs dependencies first, then runs gunicorn.
args = "uv pip install -e . && gunicorn --bind 0.0.0.0:5000 --reuse-port --reload wsgi:application"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5001
externalPort = 3001

[[ports]]
localPort = 6379
externalPort = 3000
